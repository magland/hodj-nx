{
    "tasks": [
        {
            "label": "serve hodj",
            "type": "shell",
            "command": "nx run hodj:serve",
        },
        {
            "label": "generate nx react library",
            "type": "shell",
            "command": "nx g @nx/react:library --importPath=@hodj/${input:libraryName} --directory=libs --name=${input:libraryName} --publishable",
        }
    ],
    "inputs": [
        {
            "id": "libraryName",
            "type": "promptString",
            "description": "Library name"
        }
    ]
}